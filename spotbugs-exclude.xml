    Thus we need to suppress findings about storing mutable state. -->
    <Match>
        <Class name="com.itemis.fluffyj.memory.FluffyMemorySegmentWrapper" />
        <!-- This is a constructor match -->
        <Method name="&lt;init&gt;" params="jdk.incubator.foreign.MemorySegment" />
        <Bug pattern="EI_EXPOSE_REP2" />
    </Match>
    <Match>
        <Class name="com.itemis.fluffyj.memory.internal.impl.FluffyPointerImpl" />
        <!-- This is a constructor match -->
        <Method name="&lt;init&gt;" params="jdk.incubator.foreign.MemoryAddress,java.lang.long,jdk.incubator.foreign.ResourceScope" />
        <Bug pattern="EI_EXPOSE_REP2" />
    </Match>
    <Match>
        <Class name="com.itemis.fluffyj.memory.internal.impl.FluffyPointerImpl" />
        <!-- This is a constructor match -->
        <Method name="&lt;init&gt;" params="jdk.incubator.foreign.MemoryAddress,jdk.incubator.foreign.ResourceScope" />
        <Bug pattern="EI_EXPOSE_REP2" />
    </Match>
    <Match>
        <Class name="com.itemis.fluffyj.memory.internal.impl.FluffySegmentImpl" />
