<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- The whole point of the foreign memory API is to directly deal with memory that could be changed from elsewhere. -->
    <Match>
        <Class name="com.itemis.fluffyj.memory.LongSegment" />
        <!-- This is a constructor match -->
        <Method name="&lt;init&gt;" params="jdk.incubator.foreign.MemorySegment" />
        <Bug pattern="EI_EXPOSE_REP2" />
    </Match>
</FindBugsFilter>
